<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FDF9FC"
    android:orientation="vertical">

    <!-- Phần đầu với ô màu xanh -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#664FA3">

        <TextView
            android:id="@+id/schedule_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:paddingLeft="16dp"
            android:text="Công việc hôm nay"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/notification_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:paddingRight="16dp"
            android:src="@drawable/a"
            android:contentDescription="Thông báo" />
    </RelativeLayout>

    <!-- Phần danh sách công việc -->
    <LinearLayout
        android:layout_width="350dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="vertical">

        <!-- Mục công việc 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="@drawable/item_background"
            android:orientation="vertical"
            android:elevation="2dp"
            android:padding="16dp">

            <TextView
                android:id="@+id/job_title_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tên công việc 1"
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/job_description_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mô tả công việc 1"
                android:textColor="#757575"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Mục công việc 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="@drawable/item_background"
            android:orientation="vertical"
            android:elevation="2dp"
            android:padding="16dp">

            <TextView
                android:id="@+id/job_title_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tên công việc 2"
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/job_description_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mô tả công việc 2"
                android:textColor="#757575"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="@drawable/item_background"
            android:orientation="vertical"
            android:elevation="2dp"
            android:padding="16dp">

            <TextView
                android:id="@+id/job_title_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tên công việc 3"
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/job_description_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mô tả công việc 3"
                android:textColor="#757575"
                android:textSize="14sp" />
        </LinearLayout>


        <!-- Mục công việc 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="@drawable/item_background"
            android:orientation="vertical"
            android:elevation="2dp"
            android:padding="16dp">

            <TextView
                android:id="@+id/job_title_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tên công việc 4"
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/job_description_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mô tả công việc 4"
                android:textColor="#757575"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Thêm nhiều mục công việc tương tự -->
    </LinearLayout>
</LinearLayout>