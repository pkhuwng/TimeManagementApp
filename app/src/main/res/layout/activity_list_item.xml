<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FDF9FC"
    android:orientation="vertical">

    <!-- Phần đầu với ô màu xanh -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#664FA3">

        <TextView
            android:id="@+id/schedule_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:paddingLeft="16dp"
            android:text="Danh sách công việc"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/notification_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:paddingRight="16dp"
            android:src="@drawable/a"
            android:contentDescription="Thông báo" />
    </RelativeLayout>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="350dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:background="@drawable/item_background"
        android:padding="16dp"
        android:layout_marginBottom="8dp"
        android:elevation="2dp">


    <View
        android:layout_width="10dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="16dp"
        android:background="#FF4081" />


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/job_title1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên công việc"
            android:textSize="18sp"
            android:textColor="#000000"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/job_description1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mô tả công việc"
            android:textSize="14sp"
            android:textColor="#757575" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="350dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:background="@drawable/item_background"
        android:padding="16dp"
        android:layout_marginBottom="8dp"
        android:elevation="2dp">


        <View
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="16dp"
            android:background="#FF4081" />


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/job_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tên công việc"
                android:textSize="18sp"
                android:textColor="#000000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/job_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mô tả công việc"
                android:textSize="14sp"
                android:textColor="#757575" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>